extends ../layout

block content
  div#wrapper
    include ../../includes/site_banner.jade
    div#content
      div.row
        div.banner
          div.welcome
            h2
              a(href='/license_plate/' + userData._id + '/user_home') Welcome #{userData.firstName} #{userData.lastName}!
            if (userData.onlyPlate)
              div.plate
                p 
                  a(href='/license_plate/' + userData._id + '/manage_plate') Plate registered to this account: #{userData.onlyState} #{userData.onlyPlate.toUpperCase()}
            else 
              div.plate
               h2 No License Plate on File
          div.options
            include ../../includes/menu.jade
      div.rowTransparent
        div.col-40
          div.row
            h2 License Plate Messages
            div.sendLPM
              p
                a(href="/license_plate/" + userData._id + "/sendLPM") Send a License Plate Message
          if (userData.messagesLPM.length > 0)
            for message, index in userData.messagesLPM  
              div.messageContainer
                form.messageDisplayForm(action='/license_plate/'+userData._id+'/delete_lpmessage' method='post')
                  -var date = new Date(message.date)
                  div.messageDisplayContainer
                    p.messageDisplayP
                      b Message: 
                      | #{message.message} 
                    p.messageDisplayP
                      b Sent on: 
                      | #{date}
                  input(type='hidden' name='hiddenID' value=message.id)
                  div.deleteMessageButtonContainer
                    input.deleteMsgButton(type='submit' value='Delete')
      
