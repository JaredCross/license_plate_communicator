extends ../layout

block content
  div#wrapper
    include ../../includes/site_banner.jade
    div#content
      div.row
        div.banner
          div.welcome
            h2 Send a License Plate Message!
          div.options
            include ../../includes/menu.jade
      div.rowTransparent
        div.col-40
          div.row
            h2 Send a License Plate Message!
          form.sendLPMForm(action="/license_plate/" + userData._id + "/sendLPM" method = "post")
            div
              label(for='toLicensePlate') To License Plate:
              input(type="text" id="toLicensePlate" name="toLicensePlate")
            div.stateSelectContainer  
              include ../../includes/select_state.jade
            div
              label(for='lpMessage') Message: 
              input(type='text' id='lpMessage' name='lpMessage' maxlength='140')
            div
              input(type='submit' value='Send Message' class='sendMessageButton')
            div
              a(href='/license_plate/' + userData._id + '/user_home') Cancel
        if errorArray      
          div.col-40
            div.row
              h2 Errors
            ul.errorList
              for error in errorArray
                li= error     
